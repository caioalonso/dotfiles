! URxvt Settings
URxvt.scrollBar: false
! URxvt.font: -*-lemon-*-*-*-*-*-*-*-*-*-*-*-*
! URxvt.font: xft:monaco:size=10
! URxvt.font: xft:uushi:pixelsize=10:antialias=false:hinting=true

! TTF Fonts
URxvt*font: -*-terminus-medium-*-*-*-12-*-*-*-*-*-*-*
URxvt*boldFont: -*-terminus-bold-*-*-*-12-*-*-*-*-*-*-*
URxvt.letterSpace:0

!URxvt.font: xft:Source Code Pro:style=Medium:size=12
!URxvt.boldFont: xft:Source Code Pro:style=Medium:size=12
! URxvt.font: xft:lemon:pixelsize=10
! URxvt.boldFont: xft:lemon:pixelsize=10
! URxvt.font: xft:envypn:pixelsize=13
! URxvt.boldFont: xft:envypn:pixelsize=13
!URxvt.boldFont: xft:lemon:pixelsize=10:antialias=false:hinting=true


! Xft.dpi: 96
! Xft.autohint: true
! Xft.antialias: true
! Xft.hinting: true
! Xft.hintstyle: hintslight

!urxvt*transparent: true
! urxvt*shading: 10

urxvt.internalBorder: 2

! URxvt clickable links
URxvt.perl-ext-common: default,matcher
URxvt.url-launcher: /usr/bin/firefox
URxvt.matcher.button: 1

